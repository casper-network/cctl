alias cctl-infra-sidecar-view-rpc-endpoint='source $CCTL/cmds/infra/sidecar/view_rpc_endpoint.sh'
alias cctl-infra-sidecar-view-rpc-schema='source $CCTL/cmds/infra/sidecar/view_rpc_schema.sh'
